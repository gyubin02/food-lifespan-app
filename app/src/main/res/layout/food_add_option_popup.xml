<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/food_option_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    android:clickable="true"
    android:focusable="true">

    <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alignmentMode="alignMargins"
    android:columnCount="2"
    android:rowCount="2"
    android:rowOrderPreserved="false"
    android:padding="16dp">

    <!-- Scan Food -->
    <LinearLayout
        android:id="@+id/scan_food_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_option_button">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/scanner"
            android:contentDescription="Scan Food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 인식"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Barcode -->
        <LinearLayout
            android:id="@+id/scan_barcode_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_option_button"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Barcode"
                android:src="@drawable/scan_barcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="바코드 인식"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    <!-- Receipt -->


    <!-- Text -->
    <LinearLayout
        android:id="@+id/input_text_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_option_button"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/text_size"
            android:contentDescription="Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직접 입력"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    </GridLayout>
    </FrameLayout>
