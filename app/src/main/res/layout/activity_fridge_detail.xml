<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 그라데이션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_fridge"
        android:padding="24dp">

        <!-- 상단: 뒤로가기 + 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"
                android:background="@drawable/bg_back_circle"
                android:padding="8dp"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btn_back"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 냉장고"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 음식 목록 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:id="@+id/food_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 동적으로 음식 item_food.xml 이 들어갈 영역 -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- 우측 하단 + 버튼 -->
    <ImageView
        android:id="@+id/btn_add_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Add Food" />
</RelativeLayout>
