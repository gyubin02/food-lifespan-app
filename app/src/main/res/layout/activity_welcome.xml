<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <!-- 상단 냉장고 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <!-- 하단 흰색 배경 컨테이너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_white_bg"
        android:paddingHorizontal="32dp"
        android:paddingTop="32dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="618dp">

        <!-- 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작해보세요!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="32dp"/>

        <!-- Create Account 버튼 -->
        <android.widget.Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="계정 생성하기"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/create_account_button_bg"
            android:backgroundTint="@null"
            android:layout_marginBottom="16dp" />

        <!-- 텍스트 + Login 버튼 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 존재하나요?"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <android.widget.Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="로그인"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/login_button_outline"
            android:backgroundTint="@null" />
    </LinearLayout>
</FrameLayout>
