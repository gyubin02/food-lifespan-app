<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_popup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Add Refrigerator 카드 -->
    <LinearLayout
        android:id="@+id/add_refri_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popup_card_background"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_add_icon"
            android:src="@drawable/add_refri"
            android:layout_gravity="center"
            android:contentDescription="Add Refri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Refrigerator"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Add Shelf 카드 -->
    <LinearLayout
        android:id="@+id/add_shelf_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popup_card_background"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="20dp"
        android:layout_marginTop="150dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_add_icon"
            android:src="@drawable/add_shelf"
            android:layout_gravity="center"
            android:contentDescription="Add Shelf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Shelf"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</FrameLayout>
